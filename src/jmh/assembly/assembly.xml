<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>fat-benchmarks</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>${file.separator}</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>test</scope>
            <excludes>
                <exclude>org.bouncycastle:bcprov-jdk15on</exclude>
                <exclude>com.madgag.spongycastle:core</exclude>
                <exclude>org.junit.jupiter:junit-jupiter-api</exclude>
                <exclude>org.junit.jupiter:junit-jupiter-engine</exclude>
                <exclude>org.junit.platform:junit-platform-commons</exclude>
                <exclude>org.junit.platform:junit-platform-engine</exclude>
                <exclude>org.opentest4j:opentest4j</exclude>
            </excludes>
            <unpackOptions>
                <includes>
                    <include>com/google/gson/**</include>
                    <include>com/esaulpaugh/headlong/**</include>
                    <include>com/joemelsha/crypto/hash/Keccak.class</include>
                    <include>org/openjdk/jmh/**</include>
                    <include>joptsimple/internal/*.class</include>
                    <include>joptsimple/*.class</include>
                    <include>org/apache/commons/math3/stat/**</include>
                </includes>
                <excludes>
                    <exclude>org/openjdk/jmh/generators/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/test-classes</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>com/esaulpaugh/headlong/jmh/*.class</include>
                <include>com/esaulpaugh/headlong/jmh/generated/*.class</include>
                <include>org/openjdk/jmh/*.class</include>
                <include>META-INF/BenchmarkList</include>
                <include>META-INF/CompilerHints</include>
            </includes>
            <useDefaultExcludes>false</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>